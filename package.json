{
  "name": "@socialgorithm/game-server",
  "version": "0.4.0",
  "description": "JS Game Server library",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsc && ts-node -r tsconfig-paths/register --files src/index.ts",
    "build": "tsc -w",
    "test": "npm run lint && cross-env TS_NODE_FILES=true nyc mocha -r ts-node/register -r tsconfig-paths/register --recursive 'test/**/*.test.ts'",
    "lint": "tslint -p tsconfig.json -t stylish 'src/**/*.ts'",
    "lint:fix": "tslint -p tsconfig.json -t stylish --fix 'src/**/*.ts'",
    "docs": "typedoc --out docs/ --mode modules ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socialgorithm/game-server-js.git"
  },
  "keywords": [
    "game",
    "server",
    "socialgorithm"
  ],
  "author": "socialgorithm",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/socialgorithm/game-server-js/issues"
  },
  "homepage": "https://github.com/socialgorithm/game-server-js#readme",
  "dependencies": {
    "debug": "^4.1.1",
    "socket.io": "^2.2.0",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^11.9.0",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32"
  }
}
